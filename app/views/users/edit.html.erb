<h1>edit user</h1>
<%= render "devise/shared/error_messages", resource: @user %>
<%= form_for(@user) do |f| %>

    <p>name</p><%= f.text_field :name %>
    <p>image</p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <p>Introduction</p><%= f.text_field :introduction %>
    <%= f.submit "update", class:"btn btn-lg  btn-base-1 mt-20" %>
<% end %>