<div class="container">
	<div class="row">
	<%= render "devise/shared/error_messages", resource: @book %>
	 <div class="col-xs-3">
	 
	 	<h2>User info</h2> 
	 	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
	 	<table class="table">
	 	  <tbody>
	 	  	<tr>
	 	  		<th>name</<th>
	 	  		<th><%= current_user.name %></th>
	 	  	</tr>
	 	  	<tr>
	 	  		<th>introduction</th>
	 	  		<th><%= current_user.introduction %></th>
	 	  	</tr>
	 	  </tbody>
	 	</table>
	 	<div class="row">
	 		<% if @user.id == current_user.id %>
        <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
    <% end %>
	 	</div>
	 	<h2>New book</h2>
	 	<%= form_for(@book) do |f| %>
	 	<div class="field row">
	 	 <label>Title</label>
	 	 <%= f.text_field :title, class: "col-xs-12" %>
	 	</div>
	 	<div class="field row">
	 	 <label>body</label>
	 	<%= f.text_field :body, class: "col-xs-12" %>
	 	</div>
	 	<div class="actions row">
	 		<%= f.submit 'create book', class: "col-xs-12 btn btn-primary"  %>
	 	</div>

 
    
 
 
 
  
 
<% end %>




	 </div>
	 <div class="col-xs-9">
	 	<h2>Users</h2>
	 	<table class="table table-hover tablr-inverse">
	 		<thead>
	 			<tr>
	 				<th></th>
	 				<th>title</th>
	 				<th>opinin</th>
	 				<th colspan="3"></th>
	 			</tr>
	 		</thead>
	 		<tbody>
	 			 <% @books.each do |book| %>

	 			<tr>
	 				<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' %></td>
	 				<td> <%= link_to book.title, book_path(book.id) %></td>
	 				<td><%= book.body %></td>
	 				<td></td>
	 			</tr>
	 			<% end %> 
	 		</tbody>
	 	</table>
	 	
	 </div>
	</div>
	
</div>

