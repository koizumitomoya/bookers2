	 	<table class="table table-hover tablr-inverse">
	 		
	 		<tbody>
	 			 
	 			<tr>
	 				<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' %><%= link_to @user.name, user_path(@user) %></td>
</td>
