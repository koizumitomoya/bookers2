 <div class="container">
	<div class="row">
	 <div class="col-xs-3">
	 <% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
 <% end %>
	 	<h2>User info</h2> 
	 	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
	 	<table class="table">
	 	  <tbody>
	 	  	<tr>
	 	  		<th>name</<th>
	 	  		<th><%= @user.name %></th>
	 	  	</tr>
	 	  	<tr>
	 	  		<th>introduction</th>
	 	  		<th><%= @user.introduction %></th>
	 	  	</tr>
	 	  </tbody>
	 	</table>
	 	<div class="row">
		 <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "col-xs12 btn btn-default" %></p>
		<% end %>
	 	</div>
